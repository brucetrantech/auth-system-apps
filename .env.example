# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/auth_system
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=auth_system
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=30d

# Redis Configuration (for rate limiting and sessions)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Email Configuration (AWS SES or SMTP)
EMAIL_PROVIDER=smtp
# For SMTP
SMTP_HOST=smtp.email.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@email.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourapp.com
# For AWS SES
AWS_REGION=aws_your_region
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_FROM_EMAIL=noreply@yourapp.com

# Frontend URL (for OAuth callbacks and email links)
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# OAuth Provider Credentials

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# Apple OAuth
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./config/apple-auth-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/apple/callback

# Feature Flags
FEATURE_EMAIL_AUTH=true
FEATURE_OAUTH_GOOGLE=true
FEATURE_OAUTH_FACEBOOK=true
FEATURE_OAUTH_APPLE=true

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
CORS_ORIGIN=http://your_app.com # frontend

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AWS Deployment (for production)
AWS_S3_BUCKET=your-s3-bucket
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
